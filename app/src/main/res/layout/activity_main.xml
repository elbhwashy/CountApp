<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.elbhwashy.countapp.MainActivity">
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
<LinearLayout
    android:layout_weight="1"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/teamA"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_margin="10dp"
        android:text="team A"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"

        android:textStyle="bold|italic"

        android:textSize="20dp" />
    <TextView
        android:id="@+id/scoreA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center_horizontal"
        android:text="0"
        android:textSize="50dp" />
    <Button
        android:id="@+id/BTN3A"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="16dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:text="+3 point"
        android:background="#26ff00"
        android:onClick="addThreeA"/>
    <Button
        android:id="@+id/BTN2A"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="8dp"
        android:text="+2 point"
        android:background="#92e999"
        android:onClick="addTwoA"/>
    <Button
        android:id="@+id/BTN1A"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="8dp"
        android:text="free throw"
        android:background="#9cba96"
        android:onClick="addOneA"


        />
</LinearLayout>
    <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"/>
<LinearLayout
    android:layout_weight="1"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/teamB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_margin="10dp"
        android:text="team B"
        android:textStyle="bold|italic"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/scoreB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:text="0"
        android:textSize="50dp" />
    <Button
        android:id="@+id/BTN3B"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="16dp"
        android:onClick="addThreeB"
        android:background="#26ff00"
        android:text="+3 point" />
    <Button
        android:id="@+id/BTN2B"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="8dp"
        android:background="#92e999"
        android:text="+2 point"
        android:onClick="addTwoB"

        />
    <Button
        android:id="@+id/BTN1B"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="8dp"
        android:text="free throw"
        android:background="#9cba96"
        android:onClick="addOneB"

        />
</LinearLayout>
</LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="reset"
        android:layout_margin="80dp"
        android:layout_gravity="center"
        android:background="#e7590d"
        android:onClick="resetBtn"/>
</LinearLayout>

